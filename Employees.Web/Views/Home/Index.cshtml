
@using (Html.BeginForm("UploadDataFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container text-center">
        <div class="row">
            <hr style="margin-bottom:25px;" />
            <div class="col-sm-12" style="margin-bottom:20px;">
                <label class="btn-bs-file btn btn-lg btn-danger">
                    @Html.TextBox("file", "", new { type = "file", @class = "btn-bs-file btn btn-lg btn-btn-primary" })
                    <input type="submit"  class="btn-bs-file btn btn btn-btn-primary" value="Upload" style="color:black;"/>
                </label>
            </div>
        </div>
    </div>
}